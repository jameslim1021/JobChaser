extends layout
block content

    h1(id='login-id') Login
    .container
        .row
            .col.s12
                form(method='POST', action='/login')
                    .row
                        .input-field.col.s6.offset-s3.col.m4.offset-m4.col.l4.offset-l4
                            i.material-icons.prefix perm_identity
                            input#icon_prefix.validate(type='text', name='email')
                            label(for='icon_prefix') Username
                        .row
                            .input-field.col.s6.offset-s3.col.m4.offset-m4.col.l4.offset-l4
                                i.material-icons.prefix vpn_key
                                input#icon_prefix.validate(type='text', name='password')
                                label(for='icon_prefix') Password
                                .row
                                    .col.l2.offset-l4.col.s6.offset-s3
                                        button.btn.waves-effect.waves-light(type='submit', name='action', id='login-button')
                                            | Login
                                            i.material-icons.right send
                form(method='GET',action='/auth/linkedin')
                        .input-field.col.s6.offset-s3.col.m4.offset-m4.col.l3.offset-l5
                                button(type='submit', name='action', id='linkedIn-button')

                                br
                                br
                                .row
                                    .col.l12
                                        a(href='/signup') Not a member? Sign-up here for free!





extends layout

block content
  h1 Job Chaser
  .row
    .small-4.small-offset-4.medium-4.medium-offset-4.large-4.large-offset-4.columns
      form(action='/jobs', method='GET', id="form")
        input(type='text', name='title', placeholder='Search for jobs')
        input(type='text', name='location', placeholder='Location')
        input(type='submit', name='submit_btn', value='Search', class='hollow button')
      ul(class='job-list')
        if jobs
          each job in jobs
            li(class='job-li')
              a(href= job.url)= job.jobtitle
              br
              strong #{job.company} - #{job.city}, #{job.state}
              br
      .pagination-centered
        ul.pagination
          li.arrow
            a(href='/jobs?#{currentQuery}&page=') «
          li.current
            a(href='') 1
          li
            a(href='') 2
          li
            a(href='') 3
          li
            a(href='') 4
          li.unavailable
            a(href='') …
          li
            a(href='') 12
          li
            a(href='') 13
          li.arrow
            a(href='') »
  script(src='/js/vendor/jquery.js')
  script(src='/js/vendor/fastclick.js')
  script.
      $(document).foundation();

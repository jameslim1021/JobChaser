extends layout

block content
  h1 Job Chaser
  form(action='/jobs', method='GET', id="form")
    input(type='text', name='title', placeholder='Search for jobs..')
    input(type='text', name='location', placeholder='Location')
    input(type='submit', name='submit_btn', value='Search')
  ul
    if jobs
      each job in jobs
        li
        a(href= job.url)= job.jobtitle
        br
        strong
          job.company - job.city, job.state

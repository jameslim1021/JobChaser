extends layout

block content
  h1 Job Chaser
  .row
    .small-4.small-offset-4.medium-4.medium-offset-4.large-4.large-offset-4.columns
      form(action='/jobs', method='GET', id="form")
        input(type='text', name='title', placeholder='Search for jobs')
        input(type='text', name='location', placeholder='Location')
        input(type='submit', name='submit_btn', value='Search', class='hollow button')
      ul(class='job-list')
        if jobs
          each job in jobs
            li(class='job-li')
              a(href= job.url)= job.jobtitle
              br
              strong #{job.company} - #{job.city}, #{job.state}
              br
      if totalPages
        .pagination-centered
          ul.pagination
            li.current
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{parseInt(page)-1}') #{parseInt(page)}
            li
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{parseInt(page)}') #{parseInt(page)+1}
            li
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{parseInt(page)+1}') #{parseInt(page)+2}
            li
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{parseInt(page)+2}') #{parseInt(page)+3}
            li.unavailable
              a(href='') â€¦
            li
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{totalPages-1}') #{totalPages - 1}
            li
              a(href='/jobs?title=#{currentQuery.title}&location=#{currentQuery.location}&page=#{totalPages}') #{totalPages}
  script(src='/js/vendor/jquery.js')
  script(src='/js/vendor/fastclick.js')
  script.
      $(document).foundation();

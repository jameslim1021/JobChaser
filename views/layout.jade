doctype html
html
  head
    title= title
  link(rel='icon', type='image/png', href='/images/favicomatic/favicon-32x32.png', sizes='32x32')
  link(rel='icon', type='image/png', href='/images/favicomatic/favicon-16x16.png', sizes='16x16')
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js")
  link(href='https://fonts.googleapis.com/css?family=Lobster+Two' rel='stylesheet' type='text/css')
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.css")
  script(src="/stylesheets/foundation-6.2.3-custom 2/js/vendor/what-input.js")
  script(src="/stylesheets/foundation-6.2.3-custom 2/js/vendor/foundation.min.js")
  link(rel='stylesheet', href='/stylesheets/foundation-6.2.3-custom 2/css/app.css')
  script(src='/js/foundation.min.js')
  body
      if user
        p
          |Hello #{user.displayName}
          ||
          a(href="/logout") Logout
      else
        p
          a(href="/auth/linkedin") Login
      .title-bar(data-responsive-toggle='example-menu', data-hide-for='medium')
          button.menu-icon(type='button', data-toggle='')
          .title-bar-title Menu
      #example-menu.top-bar
          .top-bar-left
              ul.dropdown.menu(data-dropdown-menu='')
                  li.menu-text Job Chaser
                  li
                      a(href='/jobs') Jobs
                  li
                      a(href='/companies') Companies
                  li
                      a(href='/salaries') Salaries
                  li
                      a(href='/interviews') Interviews
          .top-bar-right
              ul.menu
                  li
                      input(type='search', placeholder='Search')
                  li
                      button.button(type='button') Search

        block content
